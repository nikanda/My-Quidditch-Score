<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFFFFF"
    android:elevation="6dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Select a team"
        android:textAppearance="@style/text_normal" />

    <LinearLayout
        android:id="@+id/TeamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/popupBtnTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team\nName A"
            android:textAlignment="center"
            android:textAppearance="@style/text_popup_button" />

        <Button
            android:id="@+id/popupBtnTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team\nName B"
            android:textAlignment="center"
            android:textAppearance="@style/text_popup_button" />

    </LinearLayout>

</LinearLayout>